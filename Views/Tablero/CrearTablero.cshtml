@using tl2_tp10_2023_lucianobonilla27.ViewModels
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@model CrearTableroViewModel;

<style>
    /* Estilos personalizados para la paleta de colores neutra */
    body {
        background-color: #ECF0F1;
        color: #2C3E50;
    }

    h2, h4 {
        color: #3498DB;
    }

    .form-label, .form-control, .btn-primary {
        background-color: #ECF0F1;
        border-color: #3498DB;
        color: #2C3E50;
    }

    .form-control {
        margin-bottom: 15px;
    }

    .btn-primary:hover {
        filter: brightness(90%);
    }

    .text-danger {
        color: #E74C3C;
    }
</style>

<form asp-controller="Tablero" asp-action="CrearTablero" method="post">
    <div class="mb-3">
        <label for="lbl.nombre" class="form-label" asp-for="Nombre">Nombre: </label>
        <input type="text" class="form-control" id="lbl.nombre" asp-for="Nombre">
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="lbl.descripcion" class="form-label" asp-for="Descripcion">Descripción: </label>
        <input type="text" class="form-control" id="lbl.descripcion" asp-for="Descripcion">
    </div>

    <p>El usuario Propietario de este tablero será el de la sesión iniciada</p>

    <button type="submit" class="btn btn-primary">Crear</button>
</form>
